name: lean-ci
on:
  push: { branches: ["**"] }
  pull_request:
jobs:
  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: leanprover/lean-action@v1
      - name: Build
        run: lake build

  build:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - name: Install elan + lake
        run: |
          curl -L https://raw.githubusercontent.com/leanprover/elan/master/elan-init.sh | sh -s -- -y
          echo "$HOME/.elan/bin" >> $GITHUB_PATH
          ~/.elan/bin/elan toolchain install leanprover/lean4:stable
          ~/.elan/bin/lake --version
      - name: lake update
        run: |
          ~/.elan/bin/lake update
          test -f lake-manifest.json && echo "found lake-manifest.json"
      - name: lake build
        run: ~/.elan/bin/lake build
      - name: lake build proofs
        run: ~/.elan/bin/lake build proofs
